#!/bin/bash
# Post-installation script

# Color definitions will be added here later
COLOR_GREEN='\033[0;32m'
COLOR_YELLOW='\033[1;33m'
COLOR_RESET='\033[0m'

echo -e "${COLOR_GREEN}"
cat << 'INSTALL_ART'
    â–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—
    â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ•‘
    â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•   â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ•— â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ•— â–ˆâ–ˆâ•‘
â–ˆâ–ˆâ•— â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘
â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘   â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘ â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•‘
 â•šâ•â•â•â•â•  â•šâ•â•â•â•â•â• â•šâ•â•  â•šâ•â•    â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â• â•šâ•â•  â•šâ•â•â•â•â•šâ•â•  â•šâ•â•â•â•
INSTALL_ART
echo -e "${COLOR_RESET}"
echo -e "${COLOR_YELLOW}Initializing Jor-Conn...${COLOR_RESET}"

# Set executable permissions
chmod +x /usr/local/bin/jor_conn
chmod +x /usr/local/bin/jor-troubleshoot
chmod +x /usr/local/bin/jor-duckdns-update
chmod +x /usr/local/bin/jor-status

# Create default network profiles if they don't exist
create_default_network_profiles() {
    mkdir -p /etc/jor-conn/networks
    if [ ! -f /etc/jor-conn/networks/noproxy ]; then
        echo "Creating example 'noproxy' network profile..."
        cat > /etc/jor-conn/networks/noproxy << 'NET_NOPROXY'
# Network Profile: noproxy
# Connects to a standard Wi-Fi network without a proxy.
WPA_CONFIG_CONTENT="""
ctrl_interface=/var/run/wpa_supplicant
update_config=1
network={
    ssid=\\"Jo\\"
    psk=\\"69696969\\"
}
"""
APPLY_PROXY="false"
NET_NOPROXY
    fi
    if [ ! -f /etc/jor-conn/networks/proxy ]; then
        echo "Creating example 'proxy' network profile..."
        cat > /etc/jor-conn/networks/proxy << 'NET_PROXY'
# Network Profile: proxy
# Connects to a Wi-Fi network and applies proxy settings.
WPA_CONFIG_CONTENT="""
ctrl_interface=/var/run/wpa_supplicant
update_config=1
network={
    ssid=\\"DIRECT-TF-thuruht\\"
    psk=\\"0thello6q\\"
}
"""
APPLY_PROXY="true"
NET_PROXY
    fi
}
create_default_network_profiles

# Create and set permissions for log file
mkdir -p /var/log/jor-conn
touch /var/log/jor-conn/jor-conn.log
chmod 666 /var/log/jor-conn/jor-conn.log

# Final instructions
echo -e "${COLOR_GREEN}"
echo "â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
echo "âœ… JOR-CONN INSTALLED SUCCESSFULLY!"
echo ""
echo "   - Main config: /etc/jor-conn/config.conf"
echo "   - Network profiles: /etc/jor-conn/networks/"
echo ""
echo "ðŸŽ¯ Available commands:"
echo "   jor_conn connect <profile> - Connect to a network"
echo "   jor_conn remote-vnc      - Start VNC"
echo "   jor_conn status          - View system status"
echo "   jor_conn edit-config     - Edit main configuration"
echo ""
echo "ðŸš€ Quick start:"
echo "   sudo jor_conn connect proxy"
echo "   jor_conn remote-vnc"
echo "â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
echo -e "${COLOR_RESET}"

# Log installation
echo "$(date): Jor-Conn installed" >> /var/log/jor-conn/jor-conn.log